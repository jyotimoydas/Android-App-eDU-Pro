<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/jkk1">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="cursive"
        android:text="Hello !"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_alignTop="@+id/textView17"
        android:layout_marginTop="49dp"
        android:fontFamily="cursive"
        android:text="Students"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/buttonwhite"
        android:drawableStart="@drawable/stud"
        android:fontFamily="casual"
        android:text="Assignments "
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button19"
        android:layout_below="@+id/button19"
        android:layout_marginTop="17dp"
        android:text="My profile "
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableStart="@drawable/stud"
        android:textStyle="bold"
        android:background="@drawable/buttonwhite"
        android:fontFamily="casual" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonwhite"
        android:drawableStart="@drawable/stud"
        android:fontFamily="casual"
        android:text="Online Transaction"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button23"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button21"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/buttonwhite"
        android:drawableStart="@drawable/login"
        android:fontFamily="casual"
        android:text="Log out "
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/button21"
        android:layout_below="@+id/button20"
        android:layout_marginTop="21dp"
        android:hint="  Name"
        android:background="@drawable/button"
        android:drawableStart="@drawable/username"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="200dp"
        android:drawableStart="@drawable/passsss"
        android:layout_height="25dp"
        android:background="@drawable/button"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="14dp"
        android:hint="  password"
        android:textColorHint="#000000" />
</RelativeLayout>