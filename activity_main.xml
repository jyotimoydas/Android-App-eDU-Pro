<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webtek.edupro.MainActivity"
    android:background="@drawable/welzo1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:fontFamily="cursive"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="85sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="22dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/button"
        android:drawableStart="@mipmap/uni"
        android:text="Our University"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/depart"
        android:text="Our Department"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/button6"
        android:background="@drawable/button"
        android:drawableStart="@drawable/login"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/button2"
        android:layout_marginStart="20dp"
        android:background="@drawable/button"
        android:drawableStart="@mipmap/icon"
        android:text="About us"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:text="More"
        android:drawableStart="@drawable/ic_action_name"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button6"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/exit"
        android:text="Exit"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />
</RelativeLayout>
